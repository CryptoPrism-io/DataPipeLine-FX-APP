# FX Data Pipeline Configuration
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control - it's already in .gitignore

# ============ OANDA API ============
OANDA_API_KEY=your_api_key_here_from_oanda_hub
OANDA_ENVIRONMENT=demo                          # 'demo' or 'live'

# ============ PostgreSQL Database ============
DB_HOST=localhost
DB_PORT=5432
DB_NAME=fx_trading_data
DB_USER=postgres
DB_PASSWORD=your_password_here

# ============ Redis Cache ============
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=                                 # Leave empty if no password

# ============ API Server ============
API_HOST=0.0.0.0
API_PORT=5000
API_DEBUG=False

# ============ WebSocket Server ============
WEBSOCKET_HOST=0.0.0.0
WEBSOCKET_PORT=5001

# ============ Cron Jobs ============
HOURLY_JOB_ENABLED=True
DAILY_JOB_ENABLED=True

# ============ Data Retention ============
DATA_RETENTION_DAYS=365                         # Keep 1 year of data
PRICE_AUDIT_RETENTION_HOURS=24                  # Keep 24 hours of real-time prices

# ============ Correlation Settings ============
CORRELATION_THRESHOLD=0.7                       # Filter pairs above this correlation
CORRELATION_WINDOW_SIZE=100                     # Use 100 candles for calculation

# ============ Cache Settings ============
CACHE_TTL_METRICS=3600                          # 1 hour
CACHE_TTL_PRICES=300                            # 5 minutes
CACHE_TTL_CORRELATION=86400                     # 1 day

# ============ Logging ============
LOG_LEVEL=INFO                                  # DEBUG, INFO, WARNING, ERROR
LOG_FILE=logs/app.log

# ============ Rate Limiting ============
RATE_LIMIT_REQUESTS=100                         # Requests per window
RATE_LIMIT_WINDOW=60                            # Window in seconds

# ============ WebSocket Settings ============
WEBSOCKET_MAX_CLIENTS=1000
WEBSOCKET_PING_INTERVAL=25
WEBSOCKET_PING_TIMEOUT=5
